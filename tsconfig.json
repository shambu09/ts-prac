{
  "compilerOptions": {
     "target": "es2016",
     "module": "commonjs",
     "lib": ["es6"],
     "rootDir": "src",
     "resolveJsonModule": true, /* in case you are importing JSON files */
     "outDir": "./dist",
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "strict": true,
     "noImplicitAny": true,
     "skipLibCheck": true,
     "declaration": true,
     "sourceMap": true
  },
  "include": ["src"]
}
